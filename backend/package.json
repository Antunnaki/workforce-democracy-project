{
  "name": "workforce-democracy-backend",
  "version": "1.0.0",
  "description": "Backend API server with intelligent knowledge base for Workforce Democracy Project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:setup": "psql -U postgres -d workforce_democracy -f database-schema.sql",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS workforce_democracy; CREATE DATABASE workforce_democracy;' && npm run db:setup",
    "test": "jest --coverage",
    "lint": "eslint ."
  },
  "keywords": [
    "democracy",
    "civic-engagement",
    "worker-cooperatives",
    "government-transparency",
    "api"
  ],
  "author": "Workforce Democracy Project",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
